{{#if updateArticleForm}}
  <h4>Update {{article.title}} by {{article.author}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=article.title}}
        </div>

        <div class="form-group">
          <label for="type">Author</label>
          {{input value=author id="author" placeholder=article.author}}
        </div>

        <div class="form-group">
          <label for="city">Image</label>
          {{input value=image id="image" placeholder=article.image}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Content</label>
          {{textarea value=content id="content" placeholder=article.content}}
        </div>

        <button {{action 'update' article}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
